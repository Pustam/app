{
  "extends": "standard",
  "installedESLint": true,
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "eol-last": 0,
    "new-cap": ["error", {
      "newIsCap": false,
      "properties": false
    }],
    "no-new": "off"
  },
  "globals": {
  }
}